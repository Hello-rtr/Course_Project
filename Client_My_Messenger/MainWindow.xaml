<Window x:Class="Client_My_Messenger.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client_My_Messenger"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <!-- Основной контейнер -->
        <Frame Name="MainFrame" NavigationUIVisibility="Hidden" Margin="0,0,0,30"/>

        <!-- Панель статуса внизу -->
        <Border BorderBrush="LightGray" BorderThickness="0,1,0,0" 
                Background="#FFF0F0F0" Height="30" VerticalAlignment="Bottom">
            <Grid>
                <Button x:Name="ReconnectButton" 
                        Content="↻ Переподключиться" 
                        HorizontalAlignment="Right"
                        Margin="5" Padding="10,2"
                        Click="ReconnectButton_Click"
                        Visibility="Collapsed"/>
            </Grid>
        </Border>
    </Grid>
</Window>
