<Window x:Class="Client_My_Messenger.Dialogs.CreateChatDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Создать чат" Height="200" Width="300"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0">Название чата:</Label>
        <TextBox x:Name="ChatNameTextBox" Grid.Row="1" Margin="0,5,0,10"/>

        <Label Grid.Row="2">Тип чата:</Label>
        <ComboBox x:Name="ChatTypeComboBox" Grid.Row="3" Margin="0,5,0,10">
            <ComboBoxItem Tag="1">Групповой чат</ComboBoxItem>
        </ComboBox>

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Создать" Width="80" Margin="0,0,5,0" 
                    Click="CreateButton_Click" IsDefault="True"/>
            <Button Content="Отмена" Width="80" 
                    Click="CancelButton_Click" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>