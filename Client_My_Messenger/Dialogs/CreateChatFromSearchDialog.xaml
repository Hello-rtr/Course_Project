<Window x:Class="Client_My_Messenger.Dialogs.CreateChatFromSearchDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Создать чат с пользователем" 
        Height="270" 
        Width="350"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10,5"/>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Информация о пользователе -->
        <Border Grid.Row="0" 
                Background="#FFE8F5E8" 
                CornerRadius="5" 
                Padding="10" 
                Margin="0,0,0,10">
            <StackPanel>
                <TextBlock Text="{Binding TargetUserName}" 
                           FontWeight="Bold" 
                           FontSize="14"/>
                <TextBlock Text="{Binding TargetUserLogin}" 
                           FontSize="11" 
                           Foreground="Gray"/>
            </StackPanel>
        </Border>

        <Label Grid.Row="1" Content="Название чата:"/>
        <TextBox x:Name="ChatNameTextBox" 
                 Grid.Row="2" 
                 Margin="0,5,0,10"
                 Text="{Binding ChatName, UpdateSourceTrigger=PropertyChanged}"/>

        <Label Grid.Row="3" Content="Тип чата:"/>
        <ComboBox x:Name="ChatTypeComboBox" 
                  Grid.Row="4" 
                  Margin="0,5,0,10"
                  SelectedIndex="0">
            <ComboBoxItem Tag="2" Content="Приватный чат (только 2 участника)"/>
            <ComboBoxItem Tag="1" Content="Групповой чат (можно добавить других участников позже)"/>
        </ComboBox>

        <StackPanel Grid.Row="5" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button Content="Отмена" 
                    Width="90"
                    Click="CancelButton_Click" 
                    IsCancel="True"/>
            <Button Content="Создать" 
                    Width="90"
                    Click="CreateButton_Click" 
                    IsDefault="True"
                    IsEnabled="{Binding IsChatNameValid}"/>
        </StackPanel>
    </Grid>
</Window>